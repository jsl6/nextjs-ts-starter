{
  "apps": [
    {
      "name": "next-koa-ts",
      "script": "ts-node",
      "args": "--project tsconfig.server.json server/index.ts",
      "autorestart": true,
      "watch": false,
      "exec_mode": "cluster",
      "instances": "max",
      "env": {
        "NODE_ENV": "production",
        "PORT": 8000
      },
      "error_file": "./logs/err.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z"
    }
  ]
}